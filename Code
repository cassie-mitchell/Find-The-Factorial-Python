num = int(input("Enter a number: ")) #get user input and save it as an int in a variable

factorial = 1 #start at 1 and go up to chosen number

if num < 0:
   print("Sorry, factorial does not exist for negative numbers")
elif num == 0:
   print("The factorial of 0 is 1")
else:
   for i in range(1,num + 1):
       factorial = factorial*i #starting with i as 1 and factorial as 1 multiply the two together and save the answer as the new factorial then increment i and repeat
   print("The factorial of",num,"is",factorial) #print answer to console
